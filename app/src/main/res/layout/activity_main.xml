<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:alpha="0.7"
        android:src="@drawable/ic_menu_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"/>
    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:text="S.shop"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="serif"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"/>
    <ImageView
        android:id="@+id/panier"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        android:layout_marginRight="15dp"
        android:alpha="0.8"
        app:layout_constraintLeft_toRightOf="@id/titre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:alpha="0.4"
        android:background="@drawable/rounder_border_simple"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/marque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="jordan"
        app:layout_constraintLeft_toLeftOf="@id/search_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_view" />


    <ImageView
        android:id="@+id/bouton"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_brightness_1_black_24dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/panier"
        app:layout_constraintLeft_toLeftOf="@id/panier"
        app:layout_constraintVertical_bias="0.04"
        />
    <TextView
        android:id="@+id/nom_marque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:gravity="center_horizontal"
        android:textSize="27sp"
        android:text="Air Jordan"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_view" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="60dp"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintLeft_toRightOf="@id/nom_marque"
        />

    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_chevron_left_black_24dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:id="@+id/img_produit"
        android:layout_width="290dp"
        android:layout_height="200dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/kisspng_jumpman_air_jordan_air_force_flint_shoe_michael_jordan_5acd35e3ccd539_644974841523398115839"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_view" />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintLeft_toRightOf="@id/img_produit"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <view
        android:id="@+id/hr"
        android:layout_width="30dp"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="190dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"/>


    <TextView
        android:id="@+id/description_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air jordan bleue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.656" />

    <TextView
        android:id="@+id/description_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 25 000.0 Fcfa"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <TextView
        android:id="@+id/deuxieme_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous pourriez ausi aimer"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <ImageView
        android:id="@+id/produit1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="44dp"
        android:src="@drawable/kisspng_chicago_bulls_jumpman_air_jordan_shoe_jordan_5abd88b0617a70_8244050015223707363993"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deuxieme_c" />
    <TextView
        android:id="@+id/produit2_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Basket "
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.70"
        app:layout_constraintLeft_toRightOf="@id/produit1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.788" />


    <ImageView
        android:id="@+id/favorite1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:alpha="0.5"
        android:src="@drawable/ic_favorite_border_black_24dp"
        app:layout_constraintLeft_toRightOf="@id/produit2_n"
        app:layout_constraintTop_toBottomOf="@id/deuxieme_c" />

    <TextView
        android:id="@+id/produit2_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 000.0 Fcfa   ..."
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintLeft_toRightOf="@id/produit1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <ImageView
        android:id="@+id/produit2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/kisspng_nike_free_nike_air_max_basketball_shoe_sneakers_basketball_dunk_5b4496ddbe0051_1439707315312217257783"
        android:layout_marginLeft="45dp"
        app:layout_constraintTop_toBottomOf="@id/produit1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/produit1_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Basket nike "
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintLeft_toRightOf="@id/produit1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/produit1_p"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/produit1_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="592dp"
        android:text="20 000.0 Fcfa  ..."
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintLeft_toRightOf="@id/produit1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/favorite2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@id/produit1_p"
        app:layout_constraintLeft_toRightOf="@id/produit2_n"
        />




</androidx.constraintlayout.widget.ConstraintLayout>